<%- include('../partials/header') -%>


<div class="container" >


	<div class="row">

		<div class="col-md-12">
			<h2 class="wow bounceIn" data-wow-offset="50" data-wow-delay="0.3s">YOUR <span>CART</span></h2>
		</div>


		<div class="col-md-12 wow fadeInRight" data-wow-offset="50" data-wow-delay="0.6s">
			<% if (cartItems.length === 0) { %>
				<h1>Your Cart Is Empty!</h1>
			  <% } else { %>
				


			  



			<table>
			  <tr>
				<th>Product</th>
				<th>Price</th>
				<th>Quantity</th>
				<th>Less</th>
				<th>More</th>
				<th>Total</th>
			  </tr>
			  <% cartItems.forEach(function(product) { %>
			  <tr>
				<td><a href="/solution/<%= product.productName %>/<%= product.productId %>" style="text-decoration: none;"><%= product.productName %></a></td>

				<td><p>€<%= product.productPrice %></p></td>

				<td><%= product.quantity %></td>

				<td>
					<form method="post" action="/reduce/<%= product.productId %>">
					<button class="form-control">-</button>
				</form>
				</td>
				<td>
				<form action="/cart/<%= product.productId %>" method="post" name="productName" value="<%= product.Name %>">
					<button class="form-control">+</button>
				</form>
				</td>
				<% var linetotal =  product.quantity  * product.productPrice %>
				<td>€<%= linetotal %></td>
			  </tr>
			  <% }); %>
			 
			</table>
			<div class="subtotal">
			  <p>Subtotal: €<%= grandtotal %></p>
			  <form method="post" action="/guestcheckout">
			  <button class="form-control">Checkout</button>
			</form>
			</div>

			<div class="col-md-3 col-sm-4 col-xs-6" style="margin-top:20px; float: right;">
				<a href="/clearcart" style="text-decoration:none;"><button class="form-control">Empty Cart</button></a>
				
			</form>
			</div>
	
			
			<% } %>
			
			
		</div>

	</div>
</div>

<%- include('../partials/footer') -%>
<%- include('../partials/cookie') -%>




