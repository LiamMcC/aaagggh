<%- include('../partials/header') -%>

<!-- start team -->
<section id="team">
    <div class="container" >
        <div class="row">
            <div class="col-md-12">
                <h2 class="wow bounceIn" data-wow-offset="50" data-wow-delay="0.3s">MAIN <span>FEATURES</span></h2>
            </div>


            <% result[1].forEach(function(product) { %>

            <div class="col-md-3 col-sm-6 col-xs-12 wow fadeIn" data-wow-offset="50" data-wow-delay="1.3s" >
                <div class="team-wrapper" >
                    <img src="../../packImage.jpg" class="img-responsive" alt="team img 1">
                        <div class="team-des" style="min-height:20px;">
                            <h4><%= product.Title %></h4>

                        
                            <span>Server Side Code</span>
                            <p>
                                <%= product.Description.substring(0, 200) %> 
                            </p>
                        </div>
                </div>
            </div>
            <% }); %>

        </div>
    </div>
</section>
<!-- end team -->


 

    	<!-- start about -->
		<section id="about">
			<div class="container">
                <% result[0].forEach(function(product) { %>




				<div class="row">
					<div class="col-md-12">
    					<h2 class="wow bounceIn" data-wow-offset="50" data-wow-delay="0.3s"><span><%= product.Title %></span></h2>
                        <div class="col-md-3 col-sm-4 col-xs-6" style="margin-bottom:20px; float: right;">



                            <% if (isAuthenticated) { %>


                            <form action="/cart/<%= product.Id %>" method="post" name="productName" value="<%= product.Name %>">
                            <input type="submit" class="form-control" value="Add To Cart &euro;<%= product.price %>" >
                            </form>

                            <%} else { %>
                                <a href="/login">LOG IN TO BUY &euro;<%= product.price %></a>
                                
                                
                           
                            <% } %>

                        </div>
                        
                </div>
                
         
                


                    
					<div class="col-md-12 col-sm-12 col-xs-12 wow fadeInLeft" data-wow-offset="50" data-wow-delay="0.6s">
						<div class="media">
							<div class="media-heading-wrapper">
								<div class="media-object pull-left">
									<i class="fa fa-server"></i>
								</div>
								<h3 class="media-heading"><%= product.SmallBit %>
                                </h3>

                                
							</div>
							<div class="media-body">
								<p>
                  
                  <%- product.Description %></p>  
                </div>
						</div>
					</div>


               
                    <% }); %>

				</div>
			</div>
		</section>
		<!-- end about -->
   

 

   

    	


